{
  "name": "simstudio",
  "version": "0.1.19",
  "description": "Sim CLI - Run Sim with a single command",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "simstudio": "dist/index.js"
  },
  "scripts": {
    "build": "bun run build:tsc",
    "build:tsc": "tsc",
    "prepublishOnly": "bun run build",
    "dev": "bun --watch index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "simstudio",
    "ai",
    "workflow",
    "ui",
    "cli",
    "sim",
    "sim-studio",
    "agent",
    "agents",
    "automation",
    "docker"
  ],
  "author": "Sim",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "inquirer": "^10.0.6",
    "listr2": "^8.0.1"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.2",
    "@types/commander": "^2.12.2",
    "@types/inquirer": "^8.2.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  },
  "turbo": {
    "tasks": {
      "build": {
        "outputs": [
          "dist/**"
        ]
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 8,
        "functions": 70,
        "lines": 55,
        "statements": 55
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": {
            "module": "ESNext",
            "target": "ES2020"
          }
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(chalk)/)"
    ],
    "moduleNameMapper": {
      "^chalk$": "<rootDir>/__tests__/__mocks__/chalk.ts"
    },
    "testEnvironmentOptions": {
      "NODE_ENV": "test"
    }
  }
}
